<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shmrpd_photo"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/gr_circle"
        android:backgroundTint="@color/browser_actions_divider_color"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/shmrpd_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:background="@drawable/shape_shimmer_line"
            android:layout_marginBottom="2dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:background="@drawable/shape_shimmer_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>