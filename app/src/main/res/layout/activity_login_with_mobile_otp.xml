<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.mobile.LoginWithMobileOTPActivity">

    <include layout="@layout/toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:text="@string/lwm_otp_title"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textFontWeight="600"
                android:textColor="@color/colorPrimary"
                android:layout_marginVertical="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.chaos.view.PinView
                style="@style/PinWidget.PinView"
                android:id="@+id/lwmo_code"
                android:inputType="phone"
                android:digits="0123456789"
                android:itemBackground="@color/colorBackground"
                app:itemCount="6"
                app:itemHeight="60dp"
                app:itemSpacing="4dp"
                android:textFontWeight="600"
                app:lineColor="@android:color/transparent"
                android:textColor="@color/colorSecondary"
                app:cursorColor="@color/colorSecondary"
                android:cursorVisible="true"
                app:itemRadius="16dp"
                app:viewType="rectangle"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                style="@style/AppTheme.Button.UnelevatedButton"
                app:cornerRadius="24dp"
                android:id="@+id/lwmo_verify_btn"
                android:text="@string/verify"
                android:paddingVertical="20dp"
                android:minWidth="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textview.MaterialTextView
                android:text="@string/dont_receive_the_code"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lwmo_resend_btn"
                android:text="@string/resend_code"
                android:textAlignment="center"
                android:textFontWeight="600"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>