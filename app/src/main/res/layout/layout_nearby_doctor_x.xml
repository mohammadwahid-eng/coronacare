<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hdr"
    android:layout_marginHorizontal="8dp"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_margin="1dp"
            app:cardElevation="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingTop="52dp"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/hdr_name"
                    android:text="@string/minus"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/hdr_qualification"
                    android:text="@string/minus"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RatingBar
                    style="?attr/ratingBarStyleSmall"
                    android:id="@+id/hdr_rating"
                    android:progressTint="@android:color/holo_orange_light"
                    android:secondaryProgressTint="@android:color/holo_orange_light"
                    android:numStars="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/hdr_photo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/gr_avatar"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/colorFieldBG"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

</RelativeLayout>