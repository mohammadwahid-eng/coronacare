<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="AppTheme.DarkStatusBar" parent="AppTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.Toolbar.TitleText</item>
    </style>

    <style name="AppTheme.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Toolbar.SubTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxBackgroundColor">@color/colorBackground</item>
        <item name="startIconTint">@color/colorSecondary</item>
        <item name="endIconTint">@color/colorSecondary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="suffixTextAppearance">@style/AppTheme.TextInputLayout.Suffix</item>
    </style>

    <style name="AppTheme.TextInputLayout.Suffix">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="AppTheme.TextInputEditText">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="AppTheme.TextInputLabel">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="AppTheme.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="backgroundTint">@color/btn_outlined_bg</item>
    </style>

    <style name="AppTheme.Button.UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NavigationView" parent="AppTheme">
        <item name="android:theme">@style/AppTheme.NavigationView.Theme</item>
        <item name="itemBackground">@android:color/white</item>
        <item name="itemHorizontalPadding">16dp</item>
        <item name="elevation">0dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="itemIconSize">16dp</item>
        <item name="itemIconPadding">24dp</item>
        <item name="itemIconTint">@color/colorSecondary</item>
        <item name="itemTextColor">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.NavigationView.Theme">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NavigationView.Label">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.SwitchMaterial">
        <item name="useMaterialThemeColors">false</item>
        <item name="thumbTint">@color/switch_thumb_tint</item>
        <item name="trackTint">@color/switch_track_tint</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="AppTheme.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/AppTheme.MaterialAlertDialog.TitleTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.MaterialAlertDialog.PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.MaterialAlertDialog.NegativeButtonStyle</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.MaterialAlertDialog.TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">600</item>
    </style>
    <style name="AppTheme.MaterialAlertDialog.PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textFontWeight">600</item>
    </style>
    <style name="AppTheme.MaterialAlertDialog.NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="AppTheme.ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>